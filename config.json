{
  "name": "Sick Day Helper",
  "version": "1.1.1",
  "slug": "sick_day",
  "description": "Sick day automations",
  "arch": ["amd64", "aarch64", "armv7", "armhf"],
  "startup": "services",
  "boot": "auto",
  "init": false,
  "homeassistant_api": true,
  "map": ["config:rw"],
  "schema": {
    "enable_heartbeat": "bool",
    "LOG_LEVEL": "list(info|debug)?"
  },
  "environment": {
    "LOG_LEVEL": "${LOG_LEVEL}",
    "ENABLE_HEARTBEAT": "${enable_heartbeat}"
  }
}
