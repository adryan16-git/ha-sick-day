{
  "name": "Sick Day Helper",
  "version": "1.3.1",
  "slug": "sick_day",
  "description": "Sick day automations",
  "arch": ["amd64", "aarch64", "armv7", "armhf"],
  "startup": "services",
  "boot": "auto",
  "init": false,
  "ingress": true,
  "ingress_port": 8099,
  "panel_icon": "mdi:hospital-box",
  "panel_title": "Sick Day Helper",
  "homeassistant_api": true,
  "map": ["config:rw"],
  "schema": {
    "enable_heartbeat": "bool?",
    "LOG_LEVEL": "list(info|debug)?"
  },
  "environment": {
    "SDH_LOG_LEVEL": "${LOG_LEVEL}",
    "SDH_ENABLE_HEARTBEAT": "${enable_heartbeat}"
  }
}
